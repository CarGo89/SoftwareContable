@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    @Styles.Render(
        "~/Scripts/datatable/css/dataTables.bootstrap.css",
        "~/Scripts/datatable/responsive/css/dataTables.responsive.css")
}

<div ng-controller="userController">
    <div class="breadcrumbs-v3">
        <div class="container">
            <h1 class="pull-left">Usuarios</h1>
        </div>
    </div>

    <form class="form-horizontal" ng-init="initUrls('@Url.Action("Get", "User")', '@Url.Action("Save", "User")', '@Url.Action("Update", "User")', '@Url.Action("Validate", "User")')">
        <div class="container table-results-container">
            <div class="row text-center">
                <div class="col-md-offset-5 col-md-2">
                    <button type="button" title="Crear Usuario" class="btn btn-block btn-success" data-toggle="modal" data-target="#newUserModal">
                        <i class="fa fa-plus-square-o"></i>Crear
                    </button>
                </div>
            </div>

            <div class="row voffset4">
                <div class="col-md-12">
                    <table id="userResults" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Rol</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div id="newUserModal" class="modal fade" tabindex="-1" role="dialog" modal-window onhidden="onNewUserHidden">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="col-md-offset-1 col-md-3 text-justify alert alert-danger alert-validation-messages" ng-hide="validationMessages.length === 0">
                            <button type="button" class="close" aria-label="Close" ng-click="onNewUserHidden()">
                                <span aria-hidden="true">×</span>
                            </button>
                            <h4 class="text-center">Error!</h4>
                            <ul>
                                <li class="text-danger" ng-repeat="validationMessage in validationMessages">{{ validationMessage }}</li>
                            </ul>
                        </div>

                        <div class="modal-header panel-primary">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h2 class="modal-title">Nuevo Usuario</h2>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="txtRCF" class="col-md-4 control-label">Nombre</label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control" id="txtRCF" placeholder="Nombre" ng-model="newUser.UserName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtEmail" class="col-md-4 control-label">Email</label>
                                <div class="col-md-7">
                                    <input type="email" class="form-control" id="txtEmail" placeholder="Email" ng-model="newUser.Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtRole" class="col-md-4 control-label">Rol</label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control" id="txtRole" placeholder="Email" ng-model="newUser.Role">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-link" data-dismiss="modal" ng-click="cancel()">Cancelar</a>
                            <button type="button" class="btn btn-primary" ng-click="save()">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @Scripts.Render(
        "~/Scripts/angular.js",
        "~/Scripts/bootstrap-confirmation.js",
        "~/Scripts/datatable/js/jquery.dataTables.js",
        "~/Scripts/datatable/responsive/js/dataTables.responsive.min.js",
        "~/Scripts/datatable/js/dataTables.bootstrap.js",
        "~/Scripts/Utilities/software-contable.js",
        "~/Scripts/controllers/software-contable-directives.js",
        "~/Scripts/controllers/user-controller.js")
}