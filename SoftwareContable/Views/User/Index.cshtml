@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    @Styles.Render(
        "~/Scripts/datatable/css/dataTables.bootstrap.css",
        "~/Scripts/datatable/responsive/css/dataTables.responsive.css")
}

<div ng-controller="">
    <div class="breadcrumbs-v3">
        <div class="container">
            <h1 class="pull-left">Usuarios</h1>
        </div>
    </div>

    <form class="form-horizontal">
        <div class="container table-results-container">
            <div class="row text-center">
                <div class="col-md-offset-5 col-md-2">
                    <buttaon type="button" title="Crear Usuario" class="btn btn-block btn-success" data-toggle="modal" data-target="#newApplicationModal">
                        <i class="fa fa-plus-square-o"></i>Crear
                    </buttaon>
                </div>
            </div>

            <div class="row voffset4">
                <div class="col-md-12">
                    <table id="applicationResults" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Rol</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @Scripts.Render(
        "~/Scripts/angular.js",
        "~/Scripts/bootstrap-confirmation.js",
        "~/Scripts/datatable/js/jquery.dataTables.js",
        "~/Scripts/datatable/responsive/js/dataTables.responsive.min.js",
        "~/Scripts/datatable/js/dataTables.bootstrap.js",
        "~/Scripts/Utilities/app-inventory.js",
        "~/Scripts/Controllers/appinventory-directives.js",
        "~/Scripts/Controllers/application-controller.js")
}