@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    @Styles.Render(
        "~/Scripts/datatable/css/dataTables.bootstrap.css",
        "~/Scripts/datatable/responsive/css/dataTables.responsive.css")
}

<div ng-controller="userController">
    <div class="breadcrumbs-v3">
        <div class="container">
            <h1 class="pull-left">Usuarios</h1>
        </div>
    </div>

    <form class="form-horizontal" ng-init="initUrls('@Url.Action("Get", "User")', '@Url.Action("Save", "User")', '@Url.Action("Authorize", "User")', '@Url.Action("Validate", "User")')">
        <div class="container table-results-container">
            <div class="row voffset4">
                <div class="col-md-12">
                    <table id="userResults" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th>Estatus</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @Scripts.Render(
        "~/Scripts/angular.js",
        "~/Scripts/bootstrap-confirmation.js",
        "~/Scripts/datatable/js/jquery.dataTables.js",
        "~/Scripts/datatable/responsive/js/dataTables.responsive.min.js",
        "~/Scripts/datatable/js/dataTables.bootstrap.js",
        "~/Scripts/controllers/software-contable-directives.js",
        "~/Scripts/controllers/user-controller.js")
}