@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/software-contable.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="col-md-offset-4 col-md-6 col-md-4">
            <div class="account-wall text-center">
                <h2>Software Contable</h2>

                <i class="fa fa-user fa-6x profile-img text-primary"></i>

                <form class="form-signin">
                    <input type="text" class="form-control" placeholder="Usuario" />
                    <input type="password" class="form-control" placeholder="Contraseña" />

                    <a href='@Url.Action("Index", "Home")' class="btn btn-primary btn-lg btn-block">
                        Iniciar Sesi&oacute;n
                    </a>
                </form>
            </div>
            <a href='@Url.Action("Register", "Account")' class="text-center new-account">Registrarse</a>
        </div>
    </div>
</body>
</html>
